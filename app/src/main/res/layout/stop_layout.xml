<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/base_margin"
    android:orientation="horizontal">

    <!-- Note: cropped this PNG to remove margin. Original at https://www.iconfinder.com/icons/298849/dot_primitive_icon - size=128 -->
    <ImageView
        android:layout_width="@dimen/accessibility_icon_size"
        android:layout_height="@dimen/accessibility_icon_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:src="@drawable/ic_dot"/>

    <TextView
        android:id="@+id/stop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/route_image"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>
